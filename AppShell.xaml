<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PontoRefeitorio.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:PontoRefeitorio.Views"
    Shell.FlyoutBehavior="Disabled"
    Shell.NavBarIsVisible="False">

    <TabBar>
        <!-- A TabBar é necessária para o fluxo de navegação, mas podemos ter apenas um item visível -->
        <ShellContent
            Title="Registo"
            ContentTemplate="{DataTemplate views:RegistroPage}"
            Route="RegistroPage" />
    </TabBar>

</Shell>