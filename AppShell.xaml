<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PontoRefeitorio.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:PontoRefeitorio.Views"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    Shell.FlyoutBehavior="Disabled">

    <Shell.Behaviors>
        <toolkit:StatusBarBehavior StatusBarColor="white" StatusBarStyle="LightContent" />
    </Shell.Behaviors>

    <ShellContent
        Title="Registro de Ponto"
        ContentTemplate="{DataTemplate views:RegistroPage}"
        Route="RegistroPage" />

</Shell>