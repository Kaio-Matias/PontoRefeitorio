<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:PontoRefeitorio.ViewModels"
             x:DataType="viewmodel:RegistroPageViewModel"
             x:Class="PontoRefeitorio.Views.RegistroPage"
             Shell.NavBarIsVisible="False">

    <ScrollView>
        <Grid>
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#FFFFFF" Offset="0.3" />
                    <GradientStop Color="#FFEFE0" Offset="0.4" />
                    <GradientStop Color="#DE7913" Offset="1.9" />
                </LinearGradientBrush>
            </Grid.Background>

            <Grid RowDefinitions="Auto, *, Auto, Auto" Padding="10">

                <VerticalStackLayout Grid.Row="0" HorizontalOptions="Center" Spacing="1" Margin="15,100,15,0">
                    <Label 
                        Text="{Binding HoraAtual}"
                        TextColor="Black"
                        FontSize="56"
                        FontAttributes="Bold"
                        HorizontalTextAlignment="Center"/>
                    <Label 
                        Text="{Binding DataAtual}"
                        TextColor="Gray"
                        FontSize="16"
                        HorizontalOptions="Center"
                        HorizontalTextAlignment="Center"/>
                </VerticalStackLayout>

                <VerticalStackLayout 
                    Grid.Row="1"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    Spacing="30"
                    Margin="20,0">

                    <Image 
                        Source="logo.png"
                        WidthRequest="250"
                        Aspect="AspectFit"
                        Margin="0,50,0,0"
                        Opacity="0.2"
                        HorizontalOptions="Center"/>

                    <ImageButton 
                        x:Name="RegistroButton"
                        Source="biometria.png"
                        WidthRequest="120"
                        HeightRequest="120"
                        Margin="0,80,0,0"
                        BackgroundColor="Transparent"
                        HorizontalOptions="Center"
                        Clicked="RegistroButton_Clicked"/>

                    <Label 
                        Text="Toque para Registrar"
                        TextColor="White"
                        FontSize="18"
                        FontAttributes="Bold"
                        HorizontalOptions="Center"
                        HorizontalTextAlignment="Center"/>
                </VerticalStackLayout>
            </Grid>
        </Grid>
    </ScrollView>
</ContentPage>
