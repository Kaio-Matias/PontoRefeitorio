<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="PontoRefeitorio.Views.Apresentacao"
             BackgroundColor="White" Shell.NavBarIsVisible="False">

    <ContentPage.Behaviors>
        <toolkit:StatusBarBehavior StatusBarColor="White" StatusBarStyle="DarkContent" />
    </ContentPage.Behaviors>

    <Grid>
        <VerticalStackLayout 
            Padding="30" 
            Spacing="15" 
            VerticalOptions="Center" 
            HorizontalOptions="Center">

            <Image 
                Source="logo.png" HeightRequest="250"
                WidthRequest="350"
                Margin="0,0,0,10"/>

            <Label 
                Text="Bem vindo! ao"
                FontSize="24"
                FontAttributes="Bold"
                TextColor="Black" HorizontalOptions="Center"/>

            <Label 
                Text="Refeições Valedourado"
                FontSize="28"
                FontAttributes="Bold"
                TextColor="#DE7913" HorizontalOptions="Center"/>

            <Label 
                Text="Um aplicativo pensado para o registo eficiente de refeições"
                FontSize="16"
                TextColor="Black" HorizontalOptions="Center"
                LineBreakMode="WordWrap"
                HorizontalTextAlignment="Center"
                Margin="0,10,0,50"/>

            <VerticalStackLayout 
                HorizontalOptions="Center" 
                VerticalOptions="EndAndExpand" 
                Margin="0,150,0,0"
                Spacing="0">
                <Label 
                    Text="Desenvolvido e mantido pela"
                    FontSize="12"
                    TextColor="Black"
                    HorizontalOptions="Center"/>
                <Label 
                    Text="equipa de T.I Valedourado"
                    FontSize="12"
                    TextColor="Black"
                    HorizontalOptions="Center"/>
            </VerticalStackLayout>
        </VerticalStackLayout>
    </Grid>
</ContentPage>